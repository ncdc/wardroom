{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "build_version": null,
    "kubernetes_version": "1.11.2-00",
    "kubernetes_cni_version": "0.6.0-00",
    "existing_ansible_ssh_args": "{{env `ANSIBLE_SSH_ARGS`}}"
  },
  "builders": [
    {
      "name": "ami-ubuntu",
      "type": "amazon-ebs",
      "instance_type": "m5.large",
      "source_ami": "{{user `ubuntu_16_04_ami`}}",
      "ami_name": "ami-ubuntu-16.04-{{user `kubernetes_version`}}-{{timestamp}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_username": "ubuntu",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "ebs_optimized": true,
      "tags": {
        "build_version": "{{user `build_version`}}",
        "source_ami": "{{user `ubuntu_16_04_ami`}}",
        "build_date": "{{isotime}}",
        "distribution": "Ubuntu",
        "distribution_release": "xenial",
        "distribution_version": "16.04",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    },
    {
      "name": "ami-centos",
      "type": "amazon-ebs",
      "instance_type": "m5.large",
      "source_ami": "{{user `centos_7_4_ami`}}",
      "ami_name": "ami-centos-7.4-{{user `kubernetes_version`}}-{{timestamp}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_username": "centos",
      "ebs_optimized": true,
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "build_version": "{{user `build_version`}}",
        "source_ami": "{{user `centos_7_4_ami`}}",
        "build_date": "{{isotime}}",
        "distribution": "CentOS",
        "distribution_release": "Core",
        "distribution_version": "7.4",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    },
    {
      "name": "gcp-ubuntu",
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "source_image": "{{ user `gcp_ubuntu_source_image`}}",
      "ssh_username": "packer",
      "zone": "us-east1-b",
      "metadata": {
        "build_version": "{{user `build_version`}}",
        "source_image": "{{ user `gcp_ubuntu_source_image`}}",
        "build_date": "{{isotime}}",
        "distribution": "Ubuntu",
        "distribution_release": "xenial",
        "distribution_version": "16.04",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    },
    {
      "name": "gcp-centos",
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "source_image": "{{ user `gcp_centos_source_image`}}",
      "ssh_username": "packer",
      "zone": "us-east1-b",
      "metadata": {
        "build_version": "{{user `build_version`}}",
        "source_image": "{{ user `gcp_centos_source_image`}}",
        "build_date": "{{isotime}}",
        "distribution": "CentOS",
        "distribution_release": "Core",
        "distribution_version": "7.4",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "../ansible/playbook.yml",
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='{{user `existing_ansible_ssh_args`}} -o IdentitiesOnly=yes'"
      ],
      "extra_arguments": [
        "--extra-vars",
        "common_upgrade_base=true kubernetes_version={{user `kubernetes_version`}} kubernetes_cni_version={{user `kubernetes_cni_version`}}"
      ]
    }
  ]
}
